// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  externalId String?  @unique
  createdAt  DateTime @default(now())
  Ticket     Ticket[]
}

enum Severity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum Alertstatus {
  NEW
  IN_PROGRESS
  RESOLVED
}

model Alert {
  id           String      @id @default(cuid())
  type         String
  severity     Severity
  status       Alertstatus @default(NEW)
  message      String
  serverUptime Int?
  networkData  String?
  payloadError String?
  createdAt    DateTime    @default(now())
  Ticket       Ticket[]
}

enum Ticketstatus {
  OPEN
  IN_PROGRESS
  CLOSED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

model Ticket {
  id         String      @id @default(cuid())
  alert      Alert?      @relation(fields: [alertId], references: [id])
  alertId    String?
  assignedTo User?       @relation(fields: [userId], references: [id])
  userId     String?
  status     Ticketstatus
  priority   Priority
  createdAt  DateTime    @default(now())
}